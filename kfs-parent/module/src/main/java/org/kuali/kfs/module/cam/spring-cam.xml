			<ref bean="depreciationBatchDao" />
		</property>		                				                		
	</bean>
	<bean id="depreciationBatchDao" parent="platformAwareDaoJdbc" class="org.kuali.kfs.module.cam.document.dataaccess.impl.DepreciationBatchDaoJdbc">
