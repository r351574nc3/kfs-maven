<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 1.0//EN" "http://www.getahead.ltd.uk/dwr/dwr10.dtd">

<dwr>
	<init>
		<creator id="spring" class="org.kuali.rice.kns.web.servlet.dwr.GlobalResourceDelegatingSpringCreator"/>
		<converter id="kualinumber" class="org.kuali.kfs.sys.KualiNumberConverter"/>
	</init>
	<allow>		
		<create creator="new" javascript="PayrollAmountUtil" scope="application">
	    	<param name="class" value="org.kuali.kfs.module.ec.util.PayrollAmountHolder" />
	    	<include method="recalculatePayrollAmount" />
	    	<include method="recalculateEffortPercent" />
	    </create>	
	    
	    <create creator="new" javascript="EffortCertificationForm" scope="application">
	    	<param name="class" value="org.kuali.kfs.module.ec.document.web.struts.EffortCertificationForm" />
	    	<include method="loadAccountInfo" />
	    </create>	
		
		<create creator="spring" javascript="LaborModuleService">
	    	<param name="beanName" value="laborModuleService" />
			<include method="calculateFringeBenefit" />
		</create>
		
	    <convert match="org.kuali.rice.kns.util.KualiDecimal" converter="kualinumber" />	
	</allow>
</dwr>
