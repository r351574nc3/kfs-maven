<config>
    <param name="log4j.file">log4j.properties</param>
    <param name="log4j.library.file">log4j-1.2.14.jar</param>
    <param name="log4j.settings.file">${settings.directory}/${log4j.file}</param>

    <param name="log4j.reload.minutes">5</param>
    <param name="memory.monitor.threshold">.85</param>

    <param name="periodic.thread.dump">true</param>
    <param name="periodic.thread.dump.seconds">300</param>

    <param name="use.p6spy">false</param>

    <param name="org.apache.catalina.core.ContainerBase.[Catalina].level "> INFO</param>
    <param name="org.apache.catalina.core.ContainerBase.[Catalina].handlers "> java.util.logging.ConsoleHandler</param>
</config>
